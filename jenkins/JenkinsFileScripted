node {
  stage('Checkout') { checkout scm }

  stage('Build') {
    docker.image('python:2-alpine').inside {
      sh 'python -m py_compile sources/add2vals.py sources/calc.py'
    }
  }

  stage('Test') {
    docker.image('qnib/pytest').inside {
      sh 'mkdir -p test-reports'
      sh 'py.test --verbose --junit-xml test-reports/results.xml sources/test_calc.py'
    }
    junit 'test-reports/results.xml'
  }

  stage('Deliver') {
    docker.image('alpine:3.19').inside {
      sh '''
        set -e
        mkdir -p dist
        tar -czf dist/python-app-artifact.tar.gz sources test-reports Jenkinsfile || true
        ls -lah dist
      '''
    }
    archiveArtifacts artifacts: 'dist/*.tar.gz', allowEmptyArchive: false
  }

  stage('Manual Approval') {
    input message: 'Lanjutkan ke tahap Deploy?'
  }

  stage('Deploy') {
  withCredentials([sshUserPrivateKey(credentialsId: 'ec2-ssh-key', keyFileVariable: 'KEYFILE', usernameVariable: 'SSHUSER')]) {
    sh """
      set -e
      chmod 600 \$KEYFILE

      echo "Deploying to EC2: run app for 60s"
      ssh -o StrictHostKeyChecking=no -i \$KEYFILE \$SSHUSER@EC2_PUBLIC_IP 'python3 -c "import time; print(\\"App started on EC2\\"); time.sleep(60); print(\\"App finished\\")"'
    """
  }
}
}
